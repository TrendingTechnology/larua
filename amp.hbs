<body class="amp-template" style="background-image:url('{{asset "bgpattern.png"}}')">
    <header class="main-header">
        <nav class="brand-logo">
            <a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="blog logo" class="logo left" /></a>
            <a href="{{@blog.url}}" class="headerurl">{{@blog.title}}</a>
        </nav>
    </header>

    <main class="content" role="main" style="background-image:url('{{asset "bgpattern.png"}}')">
    {{#post}}
        <article class="post">
            {{#if feature_image}}

            <div class="post-image">
            <amp-img class="posthead-image" src="{{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "images/fallback-image.jpg"}}{{/if}}" title="{{title}}" alt="Header image of {{title}}" />
            </div>

            {{/if}}
            <header class="post-header">
                <section class="post-meta">
                <span class="card-title">
                    <p class="posttitle center">{{title}}</p>
                </span>
                <div class="post-authors text-center">
                    {{#foreach authors}}
                        <a href="{{url}}" title="{{name}}"><img src="{{#if profile_image}}{{img_url profile_image}}{{/if}}" class="post-avatar" alt="{{name}}" title="{{name}}"></a> 
                    {{/foreach}}
                </div>
                <div class="post-subitems">
                    <i class="far fa-clock"></i><time datetime="{{date format="DD-MM-YYYY"}}">{{date format="DD MMMM YYYY"}}</time>
                    <i class="fas fa-book"></i>{{reading_time seconds=(t "< 1 min read") minute=(t "1 min read") minutes=(t "% min read")}}
                </div>
                </section>
            </header>
            <section class="card-content">

                {{amp_content}}

            </section>
            {{> 'post/author-section'}}
        </article>
 {{/post}}
