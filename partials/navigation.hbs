<header>

<nav class="navbar navbar-expand-md navbar-dark justify-content-start">
  <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  {{#if @blog.logo}}
      {{#is "post, page, tag, author"}}
        <div class="logo-fixed d-none d-sm-block d-md-none d-lg-block">
          <a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="blog logo" class="logo-nav left" /></a>
        </div>
      {{/is}}
       {{#is "index, home"}}     
        <div class="logo-mobile d-block d-sm-none d-md-none d-lg-none">
          <a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="blog logo" class="logo-nav left" /></a>
        </div>
       {{/is}}

  {{else}}
  <a href="{{@blog.url}}" class="navbar-brand headerurl">{{@blog.title}}</a>
  {{/if}}
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav ml-auto">

                <!-- Loop through the navigation items -->
        {{#foreach navigation}}
        <li class="menu-item{{#if current}} active{{/if}}">
            <a href="{{url absolute="true"}}" class="nav-link">{{label}}</a>
        </li>
        {{/foreach}}
        <!-- End the loop -->
    </ul>
  </div>
</nav>
</header>
