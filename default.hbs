<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/html" lang="{{lang}}">
  <head>

    <title>{{meta_title}}</title>
    <meta name="description" content="{{@blog.description}}" />

    {{! Document Settings }}
    <meta http-equiv="Content-Type" content="text/html" charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width" />

    {{! Responsive Meta Tags }}
    <!-- own stylesheet for general stuff -->
    <link rel="stylesheet" href="{{asset "css/style.css"}}">
    <!-- other used items -->
    <link href="https://fonts.googleapis.com/css?family=Karla:400,700" rel="stylesheet"> 
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.10/css/all.css" integrity="sha384-+d0P83n9kaQMCwj8F4RJB66tzIwOKmrdb46+porD/OvrJ+37WqIM7UoBtwHO6Nlg" crossorigin="anonymous">
        {{! Ghost outputs important style and meta data with this tag }}
    {{ghost_head}}
</head>
<!-- main navigation -->
{{navigation}}
<main class="{{body_class}}" style="background-image:url('{{asset "bgpattern.png"}}')">

<div class="d-block d-sm-block d-md-block d-lg-none">
  {{#is "post, page"}}
  {{#post}}
        <div class="post-image">
          <img class="posthead-image" src="{{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}" title="{{title}}" alt="Header image of {{title}}" />
        </div>
  {{/post}}
{{/is}}
</div>

<div class="d-none d-sm-none d-md-none d-lg-block tag_head_wrap">
{{#is "author"}}
  {{#author}}
  <div class="tag_heading text-center" style="background-image: url({{#if cover_image}}{{img_url cover_image}}{{else}}{{asset "images/fallback-cover.jpg"}}{{/if}}); background-repeat: no-repeat; background-size: cover; height: 282px">
    <img src="{{#if profile_image}}{{img_url profile_image}}{{else}}{{asset "images/no-pic-available-user.jpg"}}{{/if}}" class="avatar-page avatar-page-author center-align" title="Image of {{name}}" alt="Image of {{name}}" />
    <p class="posttitle posttitle-author">{{name}}</p>
      <div class="socialfooter-top text-center socialfooter-top-author">
      {{#if facebook}}<a href="{{facebook_url}}" target="blank"><i class="fab fa-facebook fa-facebook-author"></i></a>{{/if}}
      {{#if twitter}}<a href="{{twitter_url}}" target="blank"><i class="fab fa-twitter fa-twitter-author"></i></a>{{/if}}
      </div>
  </div>
  {{/author}}
{{/is}}

{{#is "tag"}}
  {{#tag}}
  <div class="tag_heading text-center" style="background-image: url({{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "images/fallback-tag.jpg"}}{{/if}}); background-repeat: no-repeat; background-size: cover; height: 282px;">
  <p class="posttitle">{{name}}</p>
  </div>
  {{/tag}}
{{/is}}

{{#if @blog.logo}}
  {{#is "index, home"}}
<div class="logo-main">
<a href="{{@blog.url}}"><img src="{{@blog.logo}}" alt="{{meta_title}} logo" title="{{meta_title}} logo" class="logo left" /></a>
</div>


  <div class="text-main d-none d-sm-none d-md-none d-lg-block">
    {{#if @blog.description}}
      {{@blog.description}}
    {{/if}}
  </div>
  {{/is}}
{{/if}}


{{#is "index, home"}}
{{#if @blog.cover_image}}

  <img src="{{@blog.cover_image}}" alt="Cover image" class="cover-image" /></a>

  <div class="top-socials">
        <a href="{{@blog.url}}/rss" target="_blank"><i class="fas fa-rss"></i></a>
        {{#if @blog.facebook}}
          <a href="{{facebook_url @blog.facebook}}" target="_blank"><i class="fab fa-facebook"></i></a>
        {{/if}}
        {{#if @blog.twitter}}
          <a href="{{twitter_url @blog.twitter}}" target="_blank"><i class="fab fa-twitter"></i></a>
        {{/if}}  
  </div>
  {{/if}}
  
{{/is}}


{{#is "post, page"}}
  {{#post}}
        <div class="post-image">
          <img class="posthead-image" src="{{#if feature_image}}{{img_url feature_image}}{{else}}{{asset "images/no-pic-available.jpg"}}{{/if}}" title="{{title}}" alt="Header image of {{title}}" />
        </div>
  {{/post}}
{{/is}}
</div>

<div class="container-fluid">

       {{{body}}}

</div><!-- container fluid END! -->
</main>

<footer class="page-footer"  style="background-image:url('{{asset "bgpattern.png"}}')">
    {{> 'ui/footer'}}
</footer>
<!-- Compiled and minified JavaScript -->
<script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.min.js" integrity="sha384-smHYKdLADwkXOn1EmN1qk/HfnUcbVRZyYmZ4qpPea6sjB/pTJ0euyQp0Mk8ck+5T" crossorigin="anonymous"></script>
{{ghost_foot}}
</html>
